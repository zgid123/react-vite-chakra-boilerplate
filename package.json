{
  "name": "react-vite-chakra-boilerplate",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "author": "Alpha",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "clear": "pnpm -r exec rimraf node_modules dist .turbo lib && pnpm rimraf node_modules .turbo",
    "dev": "turbo run dev --parallel --no-cache",
    "serve": "turbo run serve --parallel --no-cache",
    "update-packages": "pnpm update -i -r --latest",
    "build:all": "turbo run build",
    "build": "turbo run build --filter=@config/*",
    "test": "turbo run test",
    "test:cov": "turbo run test:cov",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "packageManager": "pnpm@9.4.0",
  "devDependencies": {
    "@chromatic-com/storybook": "^1.7.0",
    "@config/tsconfig": "workspace:^",
    "@config/vitest": "workspace:^",
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.1",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/addon-interactions": "^8.2.9",
    "@storybook/addon-links": "^8.2.9",
    "@storybook/addon-onboarding": "^8.2.9",
    "@storybook/blocks": "^8.2.9",
    "@storybook/preview-api": "^8.2.9",
    "@storybook/react": "^8.2.9",
    "@storybook/react-vite": "^8.2.9",
    "@storybook/test": "^8.2.9",
    "@tanstack/router-devtools": "^1.51.0",
    "@tanstack/router-plugin": "^1.51.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@types/detect-port": "^1.3.5",
    "@types/eslint__js": "^8.42.3",
    "@types/global-types": "workspace:^",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vitest/coverage-istanbul": "^2.0.5",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.11",
    "eslint-plugin-storybook": "^0.8.0",
    "globals": "^15.9.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "msw": "^2.3.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "storybook": "^8.2.9",
    "storybook-dark-mode": "^4.0.2",
    "tslib": "^2.7.0",
    "turbo": "^2.1.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vitest": "^2.0.5",
    "vitest-preview": "^0.0.1"
  },
  "dependencies": {
    "detect-port": "^1.6.1"
  }
}
